  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "vite-node --mode development --watch src/index.ts",
    "build": "vite build",
    "format": "prettier ./src --write --config ../.prettierrc.cjs",
    "test": "vitest run --mode development",
    "typecheck": "tsc --noEmit",
